@model List<TND.Models.Month_End>
@{
    ViewBag.Title = "Tables_Month_End";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var loclist = (List<TND.Models.Location>)ViewBag.Locationlist;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>TND-MONTH END</title>
</head>
<body>
    <div class="container-scroller">

        <div class="container-fluid page-body-wrapper">
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">

                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title" style="color:#36332b;">Month-End Table</h4>
                                    <div class="table-responsive">
                                        <table class="table table-hover table-bordered" style="color:#36332b;">
                                            <thead>
                                                <tr style="background-color:#6e9fcc;color:white;text-align:center;">
                                                    <th>No.</th>
                                                    <th>Location Name</th>
                                                    <th>Month</th>
                                                    <th>Year</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int no = 0;
                                                    foreach (var s in Model)
                                                    {
                                                        foreach (var l in loclist)
                                                        {
                                                            if (s.Location_ID == l.LTLocation_Code)
                                                            {
                                                                no++;
                                                                <tr>
                                                                    <td>@no</td>
                                                                    <td> @l.Location_Name</td>
                                                                    <td>@s.Month</td>
                                                                    <td>@s.Year</td>
                                                                    <td>
                                                                        @{
                                                                            if (s.Status == true)
                                                                            {
                                                                                <lable class="badge badge-warning">OPEN</lable>
                                                                            }
                                                                            else
                                                                            {
                                                                                <lable class="badge badge-danger">CLOSE</lable>
                                                                            }
                                                                        }

                                                                    </td>
                                                                </tr>
                                                                                    }
                                                                                }
                                                                            }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

